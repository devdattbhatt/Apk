<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/app_row_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:contentDescription="@string/description_app_icon" />

        <TextView
            android:id="@+id/app_row_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/app_row_icon"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_toEndOf="@+id/app_row_icon"
            android:layout_toRightOf="@+id/app_row_icon"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/app_row_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_row_name"
            android:layout_toEndOf="@+id/app_row_icon"
            android:layout_toRightOf="@+id/app_row_icon"
            android:text="@string/row_version" />

        <TextView
            android:id="@+id/app_row_app_version_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_row_name"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_toEndOf="@+id/app_row_app_version"
            android:layout_toRightOf="@+id/app_row_app_version"
            android:text="@string/row_version" />

        <TextView
            android:id="@+id/app_row_package_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_row_app_version"
            android:layout_toEndOf="@+id/app_row_icon"
            android:layout_toRightOf="@+id/app_row_icon"
            android:text="@string/row_version" />

        <ImageView
            android:id="@+id/app_row_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:src="@drawable/share" />
    </RelativeLayout>

</android.support.v7.widget.CardView>